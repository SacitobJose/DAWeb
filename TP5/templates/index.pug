extends layout
block content
    .w3-container.w3-section
        .w3-card-4
            header.w3-container.w3-teal
                h3 Adicionar tarefa
            .w3-container
                form.w3-container(action='/tarefa' method='POST')
                    label.w3-teal
                        b Descrição
                    input.w3-input.w3-border.w3-light-grey(type='text' name='descricao')
                    label.w3-teal
                        b Data limite
                    input.w3-input.w3-border.w3-light-grey(type='date' name='data')
                    input.w3-btn.w3-right.w3-blue-grey(type='submit' value='Enviar')

    .w3-container.w3-section
        .w3-card-4
            header.w3-container.w3-teal
                h3 Lista de tarefas
            .w3-container
                table.w3-table-all
                    tr
                        th Tarefa
                        th Data Limite
                    each tarefa in lista
                        tr
                            td= tarefa.descricao
                            td= tarefa.data

    footer.w3-cointainer.w3-teal
        address Gerado por "Lista de Tarefas JAB2019"



