extends layout

block content
	.w3-container.w3-section.w3-teal
		.w3-card-4
			header.w3-container.w3-teal
				h3= e.designacao

	.w3-container.w3-section
		.w3-card-4
			header.w3-container.w3-teal
				h3 Informação
			
			.w3-container
				table.w3-table-all.w3-section.w3-margin-bottom
					tr
						th Estado
						th Sigla
						th SIOE
						th Designação
						th ID
						th Internacional
					tr
						td= e.estado
						td= e.sigla
						td= e.sioe
						td= e.designacao
						td= e.id
						td= e.internacional

	.w3-container.w3-section
		.w3-card-4
			header.w3-container.w3-teal
				h3 Tipologias
			
			.w3-container
				table.w3-table-all.w3-section.w3-margin-bottom
					tr
						th Sigla
						th Designação
					each t in tipologias
						tr
							td= t.sigla
							td= t.designacao

	.w3-container.w3-section
		.w3-card-4
			header.w3-container.w3-teal
				h3 Dono
			
			.w3-container
				table.w3-table-all.w3-section.w3-margin-bottom
					tr
						th Código
						th Título
					each i in intervencoes
						tr
							td= i.codigo
							td= i.titulo
	
	.w3-container.w3-section
		.w3-card-4
			header.w3-container.w3-teal
				h3 Participante
			
			.w3-container
				table.w3-table-all.w3-section.w3-margin-bottom
					tr
						th Código
						th Título
						th Tipo de participação
					each p in participantes
						tr
							td= p.codigo
							td= p.titulo
							td= p.tipoPar

	.w3-container.w3-section.w3-teal
		.w3-card-4
			footer.w3-container
				p
					a(href="/") Homepage