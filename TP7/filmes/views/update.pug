extends layout

block content
    .w3-container.w3-section
        .w3-card-4
            header.w3-container.w3-light-blue
                h3 Alterar Filme
            .w3-container
                input.w3-input.w3-border.w3-section.w3-light-grey(id="title" type="text" name="title" value=filme.title)
                input.w3-input.w3-border.w3-section.w3-light-grey(id="year" type="text" name="year" value=filme.year)
                button.w3-btn.w3-circle.w3-border.w3-right.w3-white(onclick="atualizar('" + filme._id + "')")
                    img(style="max-height: 25px; display: inline-block" src="/images/update.png" alt="")

        .w3-container.w3-light-blue
            footer.w3-container
                p
                    a(href="/") Voltar à página principal